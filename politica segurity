import requests

def analizar_seguridad_http(url):
    try:
        response = requests.get(url)
        headers = response.headers

        print(f"\nüîé Analizando: {url}")
        print(f"‚û° C√≥digo de estado: {response.status_code}")
        print(f"‚û° Usando HTTPS: {'S√≠' if url.startswith('https') else 'No'}\n")

        cabeceras_seguridad = [
            "Content-Security-Policy",
            "Strict-Transport-Security",
            "X-Content-Type-Options",
            "X-Frame-Options",
            "X-XSS-Protection",
            "Referrer-Policy"
        ]

        for cabecera in cabeceras_seguridad:
            if cabecera in headers:
                print(f"‚úÖ {cabecera}: {headers[cabecera]}")
            else:
                print(f"‚ö†Ô∏è {cabecera} NO est√° presente")

    except requests.exceptions.RequestException as e:
        print(f"Error al conectar con la p√°gina: {e}")

# Ejemplo de uso:
url = input("Ingresa la URL del sitio web (incluye http o https): ")
analizar_seguridad_http(url)
